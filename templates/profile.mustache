{{!
    @template local_booking/profile

    Log book view for summary and log book entries.

    The purpose of this template is to render the main, detailed weekly view.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
    }
}}
<div>
    <div>Profile
        <pre>
            <span>Name                  {{studentname}}</span>
            <span>Country               {{country}}</span>
            <span>Timezone              {{timezone}}</span>
            <span>Primary simulator     {{sim1}}</span>
            <span>Secondary simulator   {{sim2}}</span>
            <span>Moodle profile</span>
        </pre>
    </div>
    <div>Course Activity
        <pre>
            <span>Enrol date            {{enroldate}}</span>
            <span>Last session booked   {{lastbookeddate}}</span>
            <span>Last lesson completed {{lastlessondate}}</span>
            <span>Login as</span>
            <span>Feedback report</span>
            <span>Outline report</span>
            <span>Complete report</span>
        </pre>
    </div>
    <div>Score
        <pre>
            <span>Recency               {{recency}}</span>
            <span>Course activity       {{courseactivity}}</span>
            <span>Slots                 {{slots}}</span>
            <span>Lesson completions    {{lessoncompletion}}</span>
        </pre>
    </div>
    <div class="custom-control custom-switch">Administration
        <pre>
            <span>Assigned instructor   {{instructor}}</span>
            <span>Restriction override  {{override}}</span>
            <label class="custom-control-label" for="keepactive">Keep active</label>
            <input type="checkbox" class="custom-control-input" id="keepactive" {{#keepactive}}checked{{/keepactive}}>
            <label class="custom-control-label" for="onhold">On-hold</label>
            <input type="checkbox" class="custom-control-input" id="onhold" {{#onhold}}checked{{/onhold}}>
            <label class="custom-control-label" for="suspended">Suspended</label>
            <input type="checkbox" class="custom-control-input" id="suspended" {{#suspended}}checked{{/suspended}}>
        </pre>
    </div>
    <div>Logbook
        {{> local_booking/logbook_std}}
    </div>
</div>

