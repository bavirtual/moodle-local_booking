{{!
    @template local_booking/logbook

    Log book view for summary and log book entries.

    The purpose of this template is to render the main, detailed weekly view.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
    }
}}
<div class="logbook-body">
</br>
<div class="logbook-card logbook-shadow2">
    <h2 class="logbook-h2">{{#str}}logbooksummary,local_booking{{/str}}</h2>
    <pre>{{#str}}pilot,local_booking{{/str}}:
    <span class="logbook-highlight">{{username}}</span>

    {{#str}}totalflighttime,local_booking{{/str}}<span class="logbook-highlight">&#09;&#09;{{totalflighttime}}</span>
    {{#str}}totalsessiontime,local_booking{{/str}}<span class="logbook-highlight">&#09;&#09;{{totalsessiontime}}</span>
    {{#str}}totalsolotime,local_booking{{/str}}<span class="logbook-highlight">&#09;{{totalsolotime}}</span>
    </pre></div>

{{#entries}}
    <p>
    <div class="logbook-card logbook-shadow1">
    <h2 class="logbook-h2">{{sectionname}}</h2><h4>{{exercisename}}</h4><br/>
        <pre>{{#str}}logentry2,local_booking{{/str}}:
        {{#str}}flightdate2,local_booking{{/str}}&#09;&#09;&#09;&#09;{{sessiondate}}
        {{#str}}flighttime,local_booking{{/str}}&#09;&#09;&#09;&#09;{{flighttimemins}}
        {{#str}}sessiontime,local_booking{{/str}}&#09;&#09;&#09;{{sessiontimemins}}
        {{#str}}soloflighttime,local_booking{{/str}}&#09;&#09;&#09;{{soloflighttimemins}}

        {{#str}}aircraft,local_booking{{/str}}&#09;&#09;&#09;&#09;{{aircraft}}
        {{#str}}callsign,local_booking{{/str}}&#09;&#09;&#09;&#09;{{callsign}}
        {{#str}}pic2,local_booking{{/str}}&#09;&#09;&#09;&#09;&#09;{{picname}}
        {{#str}}sic2,local_booking{{/str}}&#09;&#09;&#09;&#09;&#09;{{sicname}}
        {{#str}}pirep,local_booking{{/str}}&#09;&#09;&#09;&#09;&#09;{{pirep}}
        {{#str}}fromicao,local_booking{{/str}}&#09;&#09;&#09;&#09;{{fromicao}}
        {{#str}}toicao,local_booking{{/str}}&#09;&#09;&#09;&#09;{{toicao}}
        </pre>
  </div>
  </p>
{{/entries}}
</br>
</div>

