{{!
    @template local_booking/student_progression

    Student progression view for instructor booking.

    The purpose of this template is to render the main, detailed weekly view.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
    }
}}
<div{{!
    }} class="bookingwrapper"{{!
    }}{{#courseid}} data-courseid="{{courseid}}"{{/courseid}}{{!
    }} data-contextid="{{contextid}}"{{!
    }}>
    <table class="booking-title">
        <tr>
            <td><h3>{{#str}}activestudents,local_booking{{/str}}</h3></td>
            <td class="mdl-right"><h5>{{#str}}averagewaittime,local_booking{{/str}}: <strong>{{avgwait}}</strong></h5></td>
        </tr>
    </table>
    </table><table id="progression-detail-{{uniqid}}" data-region="student-progression" class="table-hover table-bordered">
        <thead>
            <tr>
                <th class="header booking-header booking-xsmall text-xs-center ">
                    <span class="media-body" aria-hidden="true">#</span>
                </th>
                <th class="header booking-header text-xs-center">
                    <span class="media-body" aria-hidden="true">{{#str}}students,local_booking{{/str}}</span>
                </th>
                <th class="header booking-header booking-small text-xs-center">
                    <span class="media-body" aria-hidden="true">{{#str}}wait,local_booking{{/str}}</span>
                </th>
                <th class="header booking-header booking-med text-xs-center">
                    <span class="media-body" aria-hidden="true">{{#str}}simulator,local_booking{{/str}}</span>
                </th>
                <th class="header booking-header booking-big text-xs-center">
                    <span class="media-body" aria-hidden="true">{{#str}}sessionaction,local_booking{{/str}}</span>
                </th>
                {{#exercises}}
                <th class="header booking-header booking-xbig text-xs-center"
                    data-toggle="tooltip"
                    title="{{{exercisename}}}"
                    data-html="true"
                    data-region="lesson-exercise">
                    <span class="media-body small" aria-hidden="true">{{#shortentext}} 15, {{{exercisetitle}}} {{/shortentext}}</span>
                </th>
                {{/exercises}}
            </tr>
        </thead>
        <tbody>
        {{#activestudents}}
            <tr data-region="student">
                <td class="text-sm-center"
                    data-toggle="tooltip"
                    title="{{{sequencetooltip}}}"
                    data-html="true">
                    <span class="media-body small" aria-hidden="true">{{sequence}}</span>
                </td>
                <td class="booking-truncate">
                    <span>{{studentname}}</span><br/>
                </td>
                <td class="day text-sm-center">
                    <span class="media-body small{{#overduewarning}} session-overdue{{/overduewarning}}{{#latewarning}} session-late{{/latewarning}}"
                    aria-hidden="true">{{dayssincelast}}</span>
                </td>
                <td class="day text-sm-center">
                    <span class="media-body small" aria-hidden="true">{{simulator}}</span>
                </td>
                <td class="day"
                    {{#lessonincomplete}}
                    data-toggle="tooltip"
                    data-html="true"
                    title="{{#str}}incompletelessontooltip,local_booking{{/str}}"
                    {{/lessonincomplete}}>
                    <div id="action-button-{{studentid}}" class="singlebutton session-right">
                        <a href="{{actionurl}}"{{#lessonincomplete}} class="disabled-link"{{/lessonincomplete}}>
                            <button id="exercise-session" class="session-button session-button-{{actiontype}}"
                                data-region="action-button">
                                {{#pix}}{{#actionbook}}plane{{/actionbook}}{{^actionbook}}pencil-square{{/actionbook}},local_booking{{/pix}}
                                <span>&nbsp;&nbsp;{{actionname}}</span>
                            </button>
                         </a>
                    </div>
                </td>
            {{#sessions}}
                <td class="text-sm-center" style="max-width: 20px;"
                    data-action="view-logentry"
                    data-exercise-status="{{sessionstatus}}"
                    {{#graded}}{{^isquiz}}data-region="session-entry"
                    data-student-id="{{studentid}}"
                    data-exercise-id="{{exerciseid}}"
                    data-session-date="{{sessionts}}"
                    data-logentry-id="{{logentryid}}"
                    {{/isquiz}}{{/graded}}
                    {{^sessionempty}}
                    data-toggle="tooltip"
                    data-html="true"
                    title="{{{sessiontooltip}}}"
                    {{/sessionempty}}>
                    <div id="exercise-session" class="d-md-block text-xs-center{{#canlogentry}} clickable{{/canlogentry}}">
                        <span id="exercise-{{studentid}}-{{exerciseid}}" class="session-date media-body fa-inverse{{!
                            }}{{#graded}} session-graded{{/graded}}{{!
                            }}{{#booked}} session-booked{{/booked}}{{!
                            }}{{#tentative}} session-tentative{{/tentative}}{{!
                            }}">{{^isquiz}}{{^logentrymissing}}{{^marknoposts}}&nbsp;{{/marknoposts}}{{/logentrymissing}}{{/isquiz}}
                            {{#logentrymissing}}
                            {{#pix}}info-circle,local_booking,{{#str}}logentrymissing,local_booking{{/str}}{{/pix}}
                            {{/logentrymissing}}
                            {{#isquiz}}
                            {{#pix}}check,local_booking{{/pix}}
                            {{/isquiz}}
                            {{#marknoposts}}<span class="d-md-block session-posts">{{noposts}}</span>{{/marknoposts}}
                        </span>
                    </div>
                </td>
            {{/sessions}}
            </tr>
        {{/activestudents}}
        </tbody>
    </table>
</div>
