{{!
    @template core_course/action_bar

    Displays the tertiary nav

}}
<div class="container-fluid tertiary-navigation full-width-bottom-border" id="action_bar" data-template="local_booking/action_bar">
    <div class="row d-flex {{justify}}">
    {{#bookingview}}
        <div class="navitem order-1">
            <div>
                <span class="h3 mb-0 mr-5">{{heading}}</span><br/>
            </div>
        </div>
        <div class="navitem-divider d-none d-sm-flex order-1"></div>
    {{/bookingview}}
    {{#confirmview}}
        <div class="navitem order-1">
            <div>
                <span class="h3 mb-0 mr-5">{{#str}} bookingconfirmpg, local_booking {{/str}}</span>
            </div>
        </div>
        <div class="navitem-divider d-none d-sm-flex order-1"></div>
        <div class="navitem order-1">
            <div class="mt-2">
                <span class="h6 mr-5">{{posts}}&nbsp;{{#str}} bookingavailabilityposts, local_booking {{/str}}</span>
            </div>
        </div>
        <div class="navitem-divider d-none d-sm-flex order-1"></div>
        <div class="navitem order-1">
            <div class="singlebutton">
                <input class="btn btn-primary" type="submit" form="confirm_form" data-region="continue-button" value="{{#str}} continue {{/str}}"/>
            </div>
        </div>
    {{/confirmview}}
    {{^readonly}}
    {{#userselect}}
        <div class="naviitme order-2 mr-3">
            {{{.}}}
        </div>
        <div class="navitem-divider d-none d-sm-flex order-2"></div>
    {{/userselect}}
    {{/readonly}}
    {{#calendarview}}
        {{>local_booking/availability_week_nav}}
    {{/calendarview}}
    {{#renderedcontent}}
        <div class="navitem order-5">
            {{{navitem}}}
        </div>
        {{^lastitem}}
            <div class="navitem-divider d-none d-sm-flex order-5"></div>
        {{/lastitem}}
    {{/renderedcontent}}
    {{#bookingview}}
        <div class="d-flex row ms-0 ms-sm-auto order-6 px-0">
            <div class="text-end">
                <span>{{#str}} averagewaittime, local_booking {{/str}}: <strong>{{avgwait}}</strong></span><br/>
                <span>{{#str}} bookingtotalstudents, local_booking {{/str}}: <strong>{{totalstudents}}</strong></span>
            </div>
        </div>
    {{/bookingview}}
    </div>
</div>
