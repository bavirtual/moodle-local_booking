{{!
    @template local_booking/student_progression

    Student progression view for instructor booking.

    The purpose of this template is to render the main, detailed weekly view.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
    }
}}
<div>
    <h1>{{ato}} {{#str}} trainingaudit , local_booking {{/str}}</h1>
    <h2>{{coursename}} ({{courseshortname}})</h2>
    <hr />
    <p><strong>{{reportdate}}</strong></p>
    <h3>{{#str}} mentorreport , local_booking {{/str}} - {{studentname}} {{vatsimid}}</h3>
    {{#exams}}
    <div>
        <p>{{examname}}</p>
        <p>{{examdesc}}</p>
        <p>{{examstart}}
           {{examend}}
           {{examduration}}
        </p>
        <p>
            {{scoringnote}}
        </p>
    </div>
    {{/exams}}
</div>
