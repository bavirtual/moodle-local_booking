{{!
    @template local_booking/progression_detailed

    Calendar week view for blocks.

    The purpose of this template is to render the main, detailed weekly view.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
    }
}}
<div{{!
    }} class="progressionwrapper"{{!
    }}{{#courseid}} data-courseid="{{courseid}}"{{/courseid}}{{!
    }} data-contextid="{{contextid}}"{{!
    }}>
    <table style="width: 100%;">
        <tr>
            <td><h3>{{#str}}activestudents,local_booking{{/str}}</h3></td>
            <td style="text-align: right;"><h5>{{#str}}averagewaittime,local_booking{{/str}}: <strong>{{avgwait}}</strong></h5></td>
        </tr>
    </table>
    </table><table id="progression-detail-{{uniqid}}" data-region="student-progression" data-testid="666" class="table-hover table-bordered">
        <thead>
            <tr>
                <th class="header booking-header text-xs-center " style="width: 20px;">
                    <span class="media-body" aria-hidden="true">#</span>
                </th>
                <th class="header booking-header text-xs-center">
                    <span class="media-body" aria-hidden="true">{{#str}}students,local_booking{{/str}}</span>
                </th>
                <th class="header booking-header text-xs-center" style="width: 30px;">
                    <span class="media-body" aria-hidden="true">{{#str}}wait,local_booking{{/str}}</span>
                </th>
                <th class="header booking-header text-xs-center" style="width: 60px;">
                    <span class="media-body" aria-hidden="true">{{#str}}simulator,local_booking{{/str}}</span>
                </th>
                <th class="header booking-header text-xs-center" style="width: 80px;">
                    <span class="media-body" aria-hidden="true">{{#str}}sessionaction,local_booking{{/str}}</span>
                </th>
                {{#exercises}}
                <th class="header booking-header text-xs-center"
                    data-toggle="tooltip"
                    title="{{{exercisename}}}"
                    data-html="true"
                    data-region="lesson-exercise"
                    style="width: 100px;">
                    <span class="media-body small" aria-hidden="true">{{#shortentext}} 15, {{{exercisetitle}}} {{/shortentext}}</span>
                </th>
                {{/exercises}}
            </tr>
        </thead>
        <tbody>
        {{#activestudents}}
            <tr data-region="student">
                <td class="text-sm-center"
                    data-toggle="tooltip"
                    title="{{{sequencetooltip}}}"
                    data-html="true">
                    <span class="media-body small" aria-hidden="true">{{sequence}}</span>
                </td>
                <td class="booking-truncate">
                    <span>{{studentname}}</span><br/>
                </td>
                <td class="day text-sm-center">
                    <span class="media-body small{{#overduewarning}} session-overdue{{/overduewarning}}{{#latewarning}} session-late{{/latewarning}}"
                    aria-hidden="true">{{dayssincelast}}</span>
                </td>
                <td class="day text-sm-center">
                    <span class="media-body small" aria-hidden="true">{{simulator}}</span>
                </td>
                <td class="day text-sm-center text-md-left"
                    {{#lessonincomplete}}
                    data-toggle="tooltip"
                    data-html="true"
                    title="{{#str}}incompletelessontooltip,local_booking{{/str}}"
                    {{/lessonincomplete}}>
                    <div id="action-button-{{studentid}}" class="singlebutton" style="float: right;">
                        <a href="{{actionurl}}"{{#lessonincomplete}} class="disabled-link"{{/lessonincomplete}}>
                        <button class="session-button session-button-{{actiontype}}"
                            data-region="action-button">
                            <i class="fa fa-{{#actionbook}}plane{{/actionbook}}{{^actionbook}}pencil-square{{/actionbook}}" style="padding-right: 5px; padding-top: 5px;"></i>
                            {{actionname}}
                        </button>
                         </a>
                    </div>
                </td>
            {{#sessions}}
                <td class="text-sm-center"
                    data-action="view-logentry"
                    data-exercise-status="{{sessionstatus}}"
                    {{#graded}}{{^isquiz}}data-region="session-entry"
                    data-student-id="{{studentid}}"
                    data-exercise-id="{{exerciseid}}"
                    data-session-date="{{sessionts}}"
                    data-logentry-id="{{logentryid}}"
                    {{/isquiz}}{{/graded}}
                    {{^sessionempty}}
                    data-toggle="tooltip"
                    data-html="true"
                    title="{{{sessiontooltip}}}"
                    {{/sessionempty}}>
                    <div class="d-md-block text-xs-center{{#canlogentry}} clickable{{/canlogentry}}">
                        <span id="exercise-{{studentid}}-{{exerciseid}}" class="session-date media-body fa-inverse{{!
                            }}{{#graded}} session-graded{{/graded}}{{!
                            }}{{#booked}} session-booked{{/booked}}{{!
                            }}{{#tentative}} session-tentative{{/tentative}}{{!
                            }}">{{^isquiz}}{{^logentrymissing}}&nbsp;{{/logentrymissing}}{{/isquiz}}
                            {{#logentrymissing}}
                                <i class="fa fa-info-circle fa-fw"
                                title="{{#str}}logentrymissing,local_booking{{/str}}"
                                aria-label="{{#str}}logentrymissing,local_booking{{/str}}"></i>
                            {{/logentrymissing}}
                            {{#isquiz}}
                                <i class="fa fa-check fa-fw"></i>
                            {{/isquiz}}
                        </span>
                    </div>
                </td>
            {{/sessions}}
            </tr>
        {{/activestudents}}
        </tbody>
    </table>
</div>
