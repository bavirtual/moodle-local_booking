{{!
    @template local_booking/dashboard_mybookings_cancel_modal

    Moodle modal template with Ok button.

    The purpose of this template is to render a modal.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * title A cleaned string (use clean_text()) to display.
    * body HTML content for the boday

    Example context (json):
    {
        "title": "Example delete logentry seriesmodal",
        "body": "Do you want to delete this logentry"
    }
}}

{{< core/modal }}
    {{$title}}{{#str}} commentcanceltitle, local_booking {{/str}}{{/title}}
    {{$body}}
        <div class="container">
            <form>
                <div class="form-group row">
                    <label for="comment" class="col-sm-2 col-form-label">{{#str}} commentcancel, local_booking {{/str}}:</label>
                    <div class="form-label-addon d-flex align-items-center align-self-start">
                        <a class="btn btn-link ml-1" role="button" data-container="body" data-toggle="popover" data-placement="right"
                            data-content="<div class=&quot;no-overflow&quot;><p>{{#str}} commentcancelhelp, local_booking {{/str}}</p></div> "
                            data-html="true" tabindex="0" data-trigger="focus" aria-label="Help">
                            <i class="icon fa fa-circle-question text-info fa-fw " title="Help with {{#str}} commentcancel, local_booking {{/str}}"
                            role="img" aria-label="Help with {{#str}} commentcancel, local_booking {{/str}}"></i>
                        </a>
                    </div>
                    <div class="col-sm-12">
                        <textarea class="form-control " id="comment" name="comment" rows="3" cols="30"></textarea>
                    </div>
                </div>
            </form>
        </div>
    {{/body}}
    {{$footer}}
        <button type="button" class="btn btn-secondary" data-action="cancel">{{#str}} cancel {{/str}}</button>
        <button type="button" class="btn btn-primary" data-action="save">{{#str}} save {{/str}}</button>
    {{/footer}}
{{/ core/modal }}
